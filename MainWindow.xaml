<Window x:Class="WPF_Clock_Stopwatch_Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Clock_Stopwatch_Timer"
        xmlns:views="clr-namespace:WPF_Clock_Stopwatch_Timer.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TabControl x:Name="tabControl" >
            <TabItem Header="Clock">
                <views:Clock/>
            </TabItem>
            
             <TabItem Header="Timer">
                <views:UserControl1></views:UserControl1>
             </TabItem>
            <TabItem Header="Stopwatch">
                <views:Chronometer></views:Chronometer>
            </TabItem>
            
        </TabControl>
    </StackPanel>
</Window>