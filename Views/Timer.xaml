<UserControl x:Class="WPF_Clock_Stopwatch_Timer.Views.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Clock_Stopwatch_Timer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
        <StackPanel>
        <Label x:Name="Chronometer1" Content="01:00" HorizontalAlignment="Center" FontSize="50"></Label>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="auto">
            <Button x:Name="StartButton" Content="Start" Click="StartButton_Click" FontSize="50" Width="150"></Button>
            <Button x:Name="StopButton" Content="Stop" Click="StopButton_Click" FontSize="50" Width="150" ></Button>

        </StackPanel>
    </StackPanel>


</UserControl>
